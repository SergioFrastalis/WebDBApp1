@page "/Clients/getall"
@model WebDBApp1.Pages.Clients.IndexModel
@{
}

<h1 class="text-center mb-4">Clients</h1>
<a class="btn btn-primary btn-lg mb-4" href="/Clients/Create">New Client</a>

<table class="mx-auto table table-dark text-center>
	<thead>
		<tr class="table-primary">
	<th colspan="4">Company Clients</th>
	</tr>
	<tr>
		<th>Client ID</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Edit/Delete</th>
		</thead>
		<tbody>
			@if (Model.Clients.Count != 0)
			{
				@foreach (var client in Model.Clients)
				{
					<tr>
						<td>@client.Id</td>
						<td>@client.Firstname</td>
						<td>@client.Lastname</td>
						<td>
							<a class="btn btn-primary" href="/Clients/@client.Id/Update">Edit</a>
							<a class="btn btn-danger" href="javascript:void(0)" onclick="confirmDelete(@client.Id)">Delete</a>
						</td>
					</tr>
				}
			}
		</tbody>
</table>
<div>
	@if (Model.ErrorObj is not null)
	{
		<p>@Model.ErrorObj.Message</p>
	}
</div>

<script src="~/js/Client.js"> </script>