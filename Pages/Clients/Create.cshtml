@page "/Clients/Create"
@model WebDBApp1.Pages.Clients.CreateModel
@using WebDBApp1.DTO

@{
	ViewData["Title"] = "Add Client";
}

<div class="container">
	<h1>Add Client</h1>

	<form method="post">

		<div class="row mb-3">
			<label for="firstname" class="col-md-1">Name</label>
			<div class="col-md-6">
				<Input asp-for="ClientInsertDTO.Firstname" class="form-control" />
				<span asp-validation-for ="ClientInsertDTO.Firstname" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label for="lastname" class="col-md-1">Surname</label>
			<div class="col-md-6">
				<Input asp-for="ClientInsertDTO.Lastname" class="form-control" />
				<span asp-validation-for="ClientInsertDTO.Lastname" class="text-danger"></span>
			</div>
		</div>

		<div>
			<div class="row mb-3">
				<div class="offset-md-1 col-md-3">
					<button type= "submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
		</div>

		<div>
			<div class="row mb-3">
				<div class="offset-md-1 col-md-3">
					<a class="btn btn-outline-primary" href"/Clients/getall">Cancel</a>
				</div>
			</div>
		</div>


	</form>

	<div>
		@if (Model.ErrorArray.Count != 0)
		{
			@foreach (var error in Model.ErrorArray)
			{
				<div >
					<p>@error.Message</p>
				</div>
			}
		}
	</div>

</div>
